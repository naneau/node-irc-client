    <script type="text/javascript">
        
        var config = {
            server: '10.0.1.8',
            port: 8080
        }
            
        
        $(document).ready(function() {
            
            // Use mustache style templates... because EJS, used server side, does not have an escape block :x
            _.templateSettings = {
              interpolate : /\{\{(.+?)\}\}/g
            };
            
            // App
            var app = new IRCApp(
